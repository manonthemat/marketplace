<form action="/user/create" method="POST">
  <h2>Create an account</h2>
  <input class="form-control" placeholder="Your name" name="name" required />
  <input class="form-control" placeholder="Your email" name="email" type="email" required />
  <input class="form-control" placeholder="Your password" name="password" type="password" />
  <input class="form-control" placeholder="Password confirmation" name="confirmation" type="password" />
  <input type="hidden" name="_csrf" value="<%= _csrf %>" />
  <input type="submit" class="btn btn-lg btn-primary btn-block" value="Create Account" />
</form>
